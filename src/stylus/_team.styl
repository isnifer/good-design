.team
  padding 50px 0 30px

  &__header
    em 50
    font-weight 700
    color #2190c1
    text-transform uppercase
    text-align center
    margin-bottom 50px

  &__card
    background #fff
    margin-bottom (100/12)*1%
    border 1px solid #cccccc
    padding 20px
    
    &_left
      box-shadow -15px -15px 0 0 #d3d3d3
    
    &_right
      box-shadow 15px -15px 0 0 #d3d3d3

  &__photo
    float left
    width 129px
    height 129px
    margin 0 20px 20px 0

  &__info
    overflow hidden
    text-align center
  
  &__position
    em 17
    margin 0 0 5px
    color #666666

  &__name
    em 25
    font-weight 700
    margin 0 0 5px
    color #2190c1
    text-transform uppercase
  
  &__email
    em 13
    margin 0 0 15px
    color #94979b

  &__logo
    background url(../img/team/logo.png) no-repeat 0 0
    margin 0 auto
    width 130px
    height 24px

  &__text
    color #515862
    em 12