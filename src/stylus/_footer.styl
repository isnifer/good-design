.footer
  background #2e3e4f
  padding 30px 0

  &__title
    color #f98561
    em 20
    text-transform uppercase
    margin 0
    font-weight 700

  &__line
    border-top 1px solid #556270
    padding 10px 0
    color #a3afb2
    em 12
    line-height (20/12)

    &:nth-child(2)
      border-top 0

    a
      color #2190c1
      text-decoration none

  &__photo
    float left
    margin 0 5px 0 0

  &__text
    overflow hidden
    em 14

  &__label
    display block
    color #2190c1
    em 17
    margin-bottom 5px

  &__email
    display block
    width 100%
    border-radius 3px
    padding 0 5px
    height 28px
    outline none
    border 0
    color #333

  &__submit
    border-radius 3px
    border 0
    display block
    float right
    background #2190c1
    color #ffffff
    em 15
    padding 3px 5px
    margin 10px 0 0 0