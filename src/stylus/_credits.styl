.credits
  position relative

  &:before
    display block
    background #e1e1e1
    width 1px
    height 100%
    content ""
    position absolute
    top 0
    left 54%

  &__address
    margin-bottom 20px

  &__icons
    float left
    margin-right 10px

  &__data
    overflow hidden

  &__map
    height 315px
    padding 3px
    background #fff

  &__data
    em 13
    color #7b7972

  &__data-line
    margin 17px 0 0

    &:first-child
      margin 10px 0 0

  &__data-text
    margin 0

  &__data-title, a
    color #0988b9      