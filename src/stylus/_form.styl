.form
  position relative

  &__field
    margin 0
    padding 0
    border 0
    width (360/366)*100%

  &__label
    display block
    padding 5px 0
    width (360/366)*100%
    margin-bottom 15px

  &__label-title
    display block
    color #515862
    em 13
    text-transform uppercase
    margin-bottom 4px

  &__input, &__select, &__textarea
    width 100%
    display block
    em 14
    outline none
    border 1px solid #dcdee0

  &__input
    height 30px

    &_captcha
      height 25px
      width 145px
  
  &__input, &__textarea
    padding 0 5px
    
    &:focus
      border-color #ffd2d2

  &__select
    width 200px

  &__textarea
    padding 3px 5px
    resize vertical
  
  &__answer
    display inline-block
    width 400px
  
  &__radio-wrapper
    display block

  &__submit
    margin 15px 0 0
    float right
    background #2190c1
    height 32px
    padding-left 32px
    padding-right 32px
    border 0
    border-radius 5px
    color #fff
    em 14
    font-weight 700

  &__captcha
    width 200px
    height 46px
    float left
    margin-right 15px

  &__enter-code
    overflow hidden

  &__star
    color #f00